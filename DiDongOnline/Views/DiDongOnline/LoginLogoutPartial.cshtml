@using DiDongOnline.Models
@{
    KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
}

@{
    if (Session["TaiKhoan"] == null) //Giao diện Login
    {
        <li><a href="~/User/DangKy"><span class="glyphicon glyphicon-user"></span> Đăng ký</a></li>
        <li> <a href="~/User/DangNhap?id=1"><span class="glyphicon glyphicon-log-in"></span>Đăng nhập</a></li>
    }
    else
    {
        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Xinchào:@kh.HoTen</a></li>
        <li><a href="@Url.Action("ChangeInformation","User", new { id = kh.MaKH })"><span class="glyphicon glyphicon-user"></span>Thay đổi thông tin cá nhân</a></li>
        <li><a href="@Url.Action("DangXuat","User")"><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</a></li>
    }
}
