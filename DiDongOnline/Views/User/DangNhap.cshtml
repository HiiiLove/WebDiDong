
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    td {
        height: 40px;
        font-weight: 600;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<h2 style="text-align: center; height: 60px;font-size:30px">Đăng Nhập</h2>
<table style="margin-left:auto;margin-right:auto">
    <tr>
        <td>
        </td>
        <td>
            <a href="~/User/LoginFacebook" class="btn btn-facebook" style="color:blue; font-size: 22px">Đăng nhập với Facebook</a>
        </td>
    </tr>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr>
            <td><b>Tên đăng nhập </b></td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Err1"]
            </td>
        </tr>
        <tr>
            <td>Mật khẩu  </td>
            <td>
                @Html.Password("MatKhau")
                @ViewBag.Err2
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" class="btn btn-primary btn-block" value="Đăng nhập" />
            </td>
        </tr>

    }
    <tr>
        <td></td>
        <td>
            <p class="text-center mt-4">Bạn chưa có tài khoản? <a href="~/User/DangKy">Đăng ký</a></p>
            <p>
                <a style="color:darkgrey" href="#">Quên mật khẩu</a>
                @using (Html.BeginForm("QuenMatKhau", "User"))
                {
                    <form class="navbar-form navbar-right" role="search">
                        <div style="" class="form-group form-inline">
                            <input style="height:20px;" type="email" name="email" class="form-control" placeholder="Email">
                            <button style="font-size: 15px; background-color: #B8B8B8; border-color: #B8B8B8" type="submit" class="btn btn-default">Gửi</button>
                        </div>

                    </form>
                }
            </p>
        </td>
    </tr>
</table>
