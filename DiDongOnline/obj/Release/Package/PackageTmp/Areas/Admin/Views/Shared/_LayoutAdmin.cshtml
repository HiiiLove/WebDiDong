<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/FileContentAdmin/assets/img/logo-fav.png">
    <title>Admin</title>
    <link rel="stylesheet" type="text/css" href="~/FileContentAdmin/assets/lib/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/FileContentAdmin/assets/lib/material-design-icons/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/FileContentAdmin/assets/lib/jquery.vectormap/jquery-jvectormap-1.2.2.css">
    <link rel="stylesheet" type="text/css" href="~/FileContentAdmin/assets/lib/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" type="text/css" href="~/FileContentAdmin/assets/lib/datetimepicker/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/FileContentAdmin/assets/css/app.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="be-wrapper be-fixed-sidebar">
        <nav class="navbar navbar-expand fixed-top be-top-header">
            <div class="container-fluid">
                <div class="be-navbar-header">
                    <a class="navbar-brand" ></a>
                </div>
                <div class="page-title"><span>Admin</span></div>
                <div class="be-right-navbar">
                    <ul class="nav navbar-nav float-right be-user-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false"><img src="~/FileContentAdmin/assets/img/avatar.png" alt="Avatar"><span class="user-name">Túpac Amaru</span></a>
                            @using DiDongOnline.Models
                            @{
                                NHANVIEN ad = (NHANVIEN)Session["TenDN"];
                            }

                            @{
                                if (Session["TenDN"] == null) //Giao diện Login
                                {
                                    Response.Redirect("/Admin/Home/Login");
                                }
                                else
                                {
                                                       <div class="dropdown-menu" role="menu">
                                                            <div class="user-info">
                                                                <div class="user-name">@ad.HoTen</div>
                                                                <div class="user-position online">Hoạt động</div>
                                                            </div>
                                                            <a class="dropdown-item" href="pages-profile.html"><span class="icon mdi mdi-face"></span>Account</a>
                                                            <a class="dropdown-item" href="@Url.Action("DangXuat","Home")"><span class="icon mdi mdi-power"></span>Logout</a>
                                                        </div>
                            }
                            }
                            

                            </li>
                        </ul>
                    <ul class="nav navbar-nav float-right be-icons-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false"><span class="icon mdi mdi-notifications"></span><span class="indicator"></span></a>
                            <ul class="dropdown-menu be-notifications">
                                <li>
                                    <div class="title">Notifications<span class="badge badge-pill">1</span></div>
                                    <div class="list">
                                        <div class="be-scroller-notifications">
                                            <div class="content">
                                                <ul>
                                                    <li class="notification notification-unread">
                                                        <a href="#">
                                                            <div class="image"><img src="~/FileContentAdmin/assets/img/avatar2.png" alt="Avatar"></div>
                                                            <div class="notification-info">
                                                                <div class="text"><span class="user-name">Jessica Caruso</span> accepted your invitation to join the team.</div><span class="date">2 min ago</span>
                                                            </div>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="footer"> <a href="#">View all notifications</a></div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="be-left-sidebar">
            <div class="left-sidebar-wrapper">
                <a class="left-sidebar-toggle" href="#">Admin</a>
                <div class="left-sidebar-spacer">
                    <div class="left-sidebar-scroll">
                        <div class="left-sidebar-content">
                            @using (Html.BeginForm("Index"))
                            {
                                <form class="navbar-form navbar-right" role="search">
                                    <div style="" class="form-group form-inline">
                                        <input style="height:40px;" type="text" name="sTuKhoa" class="form-control" placeholder="Tìm kiếm">
                                        <button style="font-size: 15px; background-color: #B8B8B8; border-color: #B8B8B8" type="submit" class="btn btn-default">Tìm kiếm</button>
                                    </div>

                                </form>
                            }
                            <ul class="sidebar-elements">

                                <li class="divider">Menu</li>
                                <li>
                                    <a href="@Url.Action("Index","Home")"><i class="icon mdi mdi-home"></i><span>Home</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","Products")"><span>Quản lý Sản Phẩm</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","ProductsType")"><span>Quản lý Lọai Sản Phẩm</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","NXS")"><span>Quản lý Nhà Sản Xuất</span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","Đơn Hàng")"><span>Quản lý Đơn Hàng</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="be-content">
            <div class="main-content container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/FileContentAdmin/assets/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/perfect-scrollbar/js/perfect-scrollbar.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/js/app.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/jquery.flot.pie.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/jquery.flot.time.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/plugins/jquery.flot.orderBars.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/plugins/curvedLines.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-flot/plugins/jquery.flot.tooltip.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery.sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/countup/countUp.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jqvmap/jquery.vmap.min.js" type="text/javascript"></script>
    <script src="~/FileContentAdmin/assets/lib/jqvmap/maps/jquery.vmap.world.js" type="text/javascript"></script>
    <script type="text/javascript">
                    $(document).ready(function () {
                        //-initialize the javascript
                        App.init();
                        App.dashboard();

                    });
    </script>
</body>
</html>