
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<style type="text/css">
    tr {
        height: 40px;
        font-weight: 600;
    }
</style>
<h2 style="text-align: center; height: 60px;font-size:30px">Đăng Ký</h2>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table style="margin-left:auto;margin-right:auto">
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
        </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
        </tr>
        <tr>
            <td>Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /></td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
    }
    <tr>
        <td></td>
        <td>
            <p class="text-center mt-4">Bạn đã có tài khoản? <a href="~/User/DangNhap">Đăng nhập</a></p>
        </td>
    </tr>
</table>

